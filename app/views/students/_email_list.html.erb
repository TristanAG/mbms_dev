
<%= form_for(student) do |f| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <div style="font-weight:500">First Name:</div>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <div style="font-weight:500">Last Name:</div>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <div style="font-weight:500">E-mail Address:</div>
    <i>To send confirmation of reservation, location, and details.</i>
    <br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <div style="font-weight:500">
      How did you hear about us?
    </div>
    <br>
    <%= f.text_area :how_did_you_hear %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>
