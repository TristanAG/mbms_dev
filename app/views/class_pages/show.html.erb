  <div id="class-mobile-image-display">
    <h1 style="margin-left: 6.5%;"> <%= @class_page.class_title %></h1>
    <% unless @class_page.class_photo.blank? %>
      <%= image_tag @class_page.class_photo.url, style: "width: 745px; max-width: 100%" %>
    <% end %>
  </div>
  <div class="container">
