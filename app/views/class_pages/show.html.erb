  <div class="two columns" id="class-page-full-view">
    <%= render 'layouts/sidebar_classes' %>
  </div>



  <div class="seven columns" style="background-color:white">
      <div class="content">
        <div id="class-full-image-display">
          <h1> <%= @class_page.class_title %></h1>

          <% unless @class_page.class_photo.blank? %>
            <%= image_tag @class_page.class_photo.url, style: "width: 600px; max-width: 100%" %>
          <% end %>
        </div>
        <p>
          <%= simple_format @class_page.class_content %>
        </p>

        <%= simple_format @class_page.sign_up_info %>

        <% if @class_page.include_sign_up %>
          <%= button_to "Sign Up", new_student_path, method: :get %>
        <% end %>

      </div>
    </div>

    <div class="two columns" id="class-page-mobile-view">
      <%= render 'layouts/sidebar_classes' %>
