<% provide(:title, "Schedule") %>
  <div class="nine columns">
    <div class="content">
      <h1>Schedule</h1>

      <p>
        <small>
          Please note: all classes with&nbsp;<span class="star">*</span>&nbsp;
          require pre-registration<br />
          Click the link for more information
        </small>
      </p>

      <div id="full-schedule-view">

        <%= month_calendar events: @current_months_classes do |date, class_pages| %>
          <span class="day-num"><b><%= date.day %></b></span>
          <br>

          <% @recurring_class_refs.each do |class_page| %>
            <% if date.strftime("%A") == class_page.start_time.strftime("%A") %>
              <%= link_to class_page.class_title, class_page %><br>
              <%= class_page.start_time.strftime("%l:%M %p") %><br>
            <% end %>
          <% end %>

          <% class_pages.each do |class_page| %>
            <% if !class_page.recurring_event %>
              <%= link_to class_page.class_title, class_page %><br>
              <%= class_page.start_time.strftime("%l:%M %p") %><br>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div id="mobile-schedule-view">

        <h1><%= @current_months_classes.first.start_time.strftime("%B")  %></h1>
        <br>


        <% i = 1 %>
        <% @all_classes.each do |class_page| %>
          check: <%= i %>
          <% i = i+1 %>
          <%= class_page.start_time.strftime("%A %y") %> |
          <%= link_to class_page.class_title, class_page %> |
          <%= class_page.start_time.strftime("%l:%M %p") %>
          <br>
        <% end %>
      </div>

    </div>
  </div>
