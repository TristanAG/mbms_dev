<% provide(:title, "ADMIN") %>

<div class="twelve columns">
  <div class="content">

      <% if current_page?(admin_path) %>
        <center>
          <%= link_to image_tag("text.png", alt: "Monterey Bay Meditation Studio logo", width: "500"),
        root_path  %>

        <br>

        <a href="#classes">Classes</a> | <a href="#schedule">Schedule</a> | <a href="#sidebar">Sidebar</a> | <a href="#mailing-list">Mailing List</a>

        </center>

        <hr>

        <div class="basicheader">Classes</div>
        <br>
        <% @class_pages.each do |class_page| %>
            <p>
            <%= link_to "#{class_page.class_title}", class_page  %>

            <br>
              Order Position: <%= class_page.order_position %>
            <br>
            <small>
            <%= link_to 'Edit', edit_class_page_path(class_page) %> |
            <%= link_to 'Destroy', class_page, method: :delete, data: { confirm: 'Are you sure?' } %>
          </small>
          </p>
        <% end %>

      <% end %>
  </div>
</div>
