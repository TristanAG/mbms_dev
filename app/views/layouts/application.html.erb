<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Monterey Bay Meditation Studio</title>
    <%= csrf_meta_tags %>
    <%= render 'layouts/basic_page_needs' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <div class="container">
      <div style="text-align:left; padding: 8px;">

          <%= link_to "Home", root_path %> |
          <%= link_to "Admin", admin_path %> |
          <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>

        <br>

      </div>
      <% end %>

      <!-- SHOPIFY CART -->
      <div id='product-component-5528069c7cb' style="display:none"></div>
      <script type="text/javascript">
        
        /*<![CDATA[*/
        (function () {
          var scriptURL = 'https://sdks.shopifycdn.com/buy-button/latest/buy-button-storefront.min.js';
          if (window.ShopifyBuy) {
            if (window.ShopifyBuy.UI) {
              ShopifyBuyInit();
            } else {
              loadScript();
            }
          } else {
            loadScript();
          }

        function loadScript() {
          var script = document.createElement('script');
          script.async = true;
          script.src = scriptURL;
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(script);
          script.onload = ShopifyBuyInit;
        }

        function ShopifyBuyInit() {
          var client = ShopifyBuy.buildClient({
            domain: 'monterey-bay-meditation-studio.myshopify.com',
            apiKey: '9eb7e9b7a1bb4086e333201197ed7216',
            appId: '6',
          });

          ShopifyBuy.UI.onReady(client).then(function (ui) {
            ui.createComponent('product', {
              id: [9059527689],
              node: document.getElementById('product-component-5528069c7cb'),
              moneyFormat: '%24%7B%7Bamount%7D%7D',
              options: {
                "product": {
                  "variantId": "all",
                  "width": "240px",
                  "contents": {
                    "img": false,
                    "imgWithCarousel": false,
                    "title": false,
                    "variantTitle": false,
                    "price": false,
                    "description": false,
                    "buttonWithQuantity": false,
                    "quantity": false
                  },
                  "text": {
                    "button": "Sign Up"
                  },
                  "styles": {
                    "product": {
                      "text-align": "left",
                      "@media (min-width: 601px)": {
                        "max-width": "100%",
                        "margin-left": "0",
                        "margin-bottom": "50px"
                      }
                    },
                    "button": {
                      "background-color": "#008e8e",
                      ":hover": {
                        "background-color": "#008080"
                      },
                      ":focus": {
                        "background-color": "#008080"
                      }
                    },
                    "title": {
                      "font-size": "26px"
                    },
                    "price": {
                      "font-size": "18px"
                    },
                    "compareAt": {
                      "font-size": "15px"
                    }
                  }
                },
                "cart": {
                  "contents": {
                    "button": true
                  },
                  "styles": {
                    "button": {

                      "background-color": "#008e8e",
                      ":hover": {
                        "background-color": "#008080"
                      },
                      ":focus": {
                        "background-color": "#008080"
                      }
                    },
                    "footer": {
                      "background-color": "#ffffff"
                    }
                  }
                },
                "modalProduct": {
                  "contents": {
                    "img": false,
                    "imgWithCarousel": true,
                    "variantTitle": false,
                    "buttonWithQuantity": true,
                    "button": false,
                    "quantity": false
                  },
                  "styles": {
                    "product": {
                      "@media (min-width: 601px)": {
                        "max-width": "100%",
                        "margin-left": "0px",
                        "margin-bottom": "0px"
                      }
                    },
                    "button": {
                      "background-color": "#008e8e",
                      ":hover": {
                        "background-color": "#008080"
                      },
                      ":focus": {
                        "background-color": "#008080"
                      }
                    }
                  }
                },
                "toggle": {
                  "styles": {
                    "toggle": {
                      "background-color": "#008e8e",
                      ":hover": {
                        "background-color": "#008080"
                      },
                      ":focus": {
                        "background-color": "#008080"
                      }
                    }
                  }
                },
                "productSet": {
                  "styles": {
                    "products": {
                      "@media (min-width: 601px)": {
                        "margin-left": "-20px"
                      }
                    }
                  }
                }
              }
            });
          });
        }
      })();
    /*]]>*/
    </script>
      <!-- /SHOPIFY CART -->

    </div>

    <!-- notifications -->
    <% if notice %><p class="alert alert-success"><%= notice %></p><% end %>
    <% if alert %><p class="alert alert-danger"><%= alert %></p><% end %>

    <!--hide normal sidebar if on admin, students, or new_user_session path -->
    <% if   current_page?(admin_path) ||
            controller_name == 'students' ||
            current_page?(new_user_session_path)  %>
      <div class="container">
        <%= yield %>
      </div>
      <%= render 'layouts/footer' %>
    <% else %>

    <!-- render the normal layout -->
      <%= render 'layouts/header' %>

      <div class="container">
        <%= yield %>
        <div class="three columns">
          <% if controller_name != 'registrations' %>
      		  <%= render 'layouts/sidebar' %>
          <% end %>
      	</div>
      </div>

  		<%= render 'layouts/footer' %>
    <% end %>
  </body>
</html>
